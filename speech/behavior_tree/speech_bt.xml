<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence name="Main">
            <Action ID="Start"/>
            <Repeat num_cycles="2">
                <Sequence>
                    <Action ID="Move" name="Move to entry"/>
                    <Sequence name="Person">
                        <Action ID="AskName"/>
                        <Action ID="AskFav"/>
                    </Sequence>
                    <Sequence name="Seat">
                        <Action ID="Move"/>
                        <Action ID="DetectSeat"/>
                        <Action ID="AskOld"/>
                        <Action ID="OfferSeat"/>
                    </Sequence>
                    <Sequence name="Report Person">
                        <Action ID="Move"/>
                        <Action ID="SayInfo"/>
                    </Sequence>
                </Sequence>
            </Repeat>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="AskFav"/>
        <Action ID="AskName"/>
        <Action ID="AskOld"/>
        <Action ID="DetectSeat"/>
        <Action ID="Move"/>
        <Action ID="OfferSeat"/>
        <Action ID="SayInfo"/>
        <Action ID="Start"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

