<?xml version="1.0"?>
<root main_tree_to_execute="find_my_mate_bt">
    <!-- ////////// -->
    <BehaviorTree ID="find_my_mate_bt">
        <SequenceStar>
            <Action ID="Start"/>
            <Repeat num_cycles="3">
                <SequenceStar>
                    <SequenceStar>
                        <Action ID="GoPosition"/>
                        <Action ID="RotateUPerson"/>
                    </SequenceStar>
                    <Action ID="GetInfo" {info}=""/>
                    <SequenceStar>
                        <Action ID="GoPosition"/>
                        <Action ID="RotateUPerson"/>
                    </SequenceStar>
                    <Action ID="Description" {info}=""/>
                </SequenceStar>
            </Repeat>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="Description">
            <input_port name="{info}"/>
        </Action>
        <Action ID="GetInfo">
            <output_port name="{info}">info of person</output_port>
        </Action>
        <Action ID="GoPosition"/>
        <Action ID="RotateUPerson"/>
        <Action ID="Start"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

