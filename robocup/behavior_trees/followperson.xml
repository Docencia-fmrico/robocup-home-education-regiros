<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <ReactiveSequence>
            <Action ID="IfPerson" name="IfPerson" person="{person}"/>
            <Control ID="Process" name="Process" person="{person}">
                <Action ID="Move" name="Move" person="{person}"/>
            </Control>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="IfPerson">
            <output_port name="{person}"/>
        </Action>
        <Action ID="Move">
            <input_port name="{person}"/>
        </Action>
        <Control ID="Process">
            <inout_port name="{person}"/>
        </Control>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

