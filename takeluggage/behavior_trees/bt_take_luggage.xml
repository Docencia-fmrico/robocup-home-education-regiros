<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <SequenceStar>
            <Action ID="Start"/>
            <Action ID="SendReferee" {point}=""/>
            <Action ID="GoPoint" {point}=""/>
            <Action ID="DetectLuggage"/>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="DetectLuggage"/>
        <Action ID="GoPoint">
            <input_port name="{point}"/>
        </Action>
        <Action ID="SendReferee">
            <output_port name="{point}"/>
        </Action>
        <Action ID="Start"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

