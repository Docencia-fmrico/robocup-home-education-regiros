<?xml version="1.0"?>
<root main_tree_to_execute="find_my_mate_bt">
    <!-- ////////// -->
    <BehaviorTree ID="find_my_mate_bt">
        <SequenceStar>
            <Action ID="Starting"/>
            <Repeat num_cycles="3">
                <SequenceStar>
                    <Sequence>
                        <Action ID="SendPoint" point="{point}"/>
                        <Action ID="GoPoint" point="{point}"/>
                        <Action ID="RotateUPerson"/>
                    </Sequence>
                    <Action ID="GetInfo" info="{info}"/>
                    <SequenceStar>
                        <Action ID="GoReferee" point="{point}"/>
                        <Action ID="GoPoint" point="{point}"/>
                        <Action ID="RotateUPerson"/>
                    </SequenceStar>
                    <Action ID="Description" info="{info}"/>
                </SequenceStar>
            </Repeat>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="Description">
            <input_port name="{info}"/>
        </Action>
        <Action ID="GetInfo">
            <output_port name="{info}">info of person</output_port>
        </Action>
        <Action ID="GoPoint">
            <input_port name="{point}"/>
        </Action>
        <Action ID="GoReferee">
            <output_port name="{point}"/>
        </Action>
        <Action ID="RotateUPerson"/>
        <Action ID="SendPoint">
            <output_port name="{point}"/>
        </Action>
        <Action ID="Starting"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

