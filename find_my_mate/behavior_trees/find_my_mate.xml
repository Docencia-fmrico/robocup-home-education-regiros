<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <SequenceStar>
            <Action ID="Start"/>
            <Repeat num_cycles="3">
                <SequenceStar>
                    <Sequence>
                        <Action ID="SendPoint" name="{point}" point="{point}"/>
                        <Action ID="GoPoint" name="{point}" point="{point}"/>
                        <Action ID="RotateUPerson"/>
                    </Sequence>
                    <Action ID="GetInfo" info="{info}"/>
                    <SequenceStar>
                        <Action ID="GoReferee" name="{point}" point="{point}"/>
                        <Action ID="GoPoint" name="{point}" point="{point}"/>
                        <Action ID="RotateUPerson"/>
                    </SequenceStar>
                    <Action ID="Description" info="{info}"/>
                </SequenceStar>
            </Repeat>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="Description">
            <input_port default="{info}" name="info"/>
        </Action>
        <Action ID="GetInfo">
            <output_port default="{info}" name="info">info of person</output_port>
        </Action>
        <Action ID="GoPoint">
            <input_port default="{point}" name="point"/>
        </Action>
        <Action ID="GoReferee">
            <output_port default="{point}" name="point"/>
        </Action>
        <Action ID="RotateUPerson"/>
        <Action ID="SendPoint">
            <output_port default="{point}" name="point"/>
        </Action>
        <Action ID="Start"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

