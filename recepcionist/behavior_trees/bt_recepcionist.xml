<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <SequenceStar name="Main">
            <Action ID="Start"/>
            <Repeat num_cycles="2">
                <Sequence>
                    <Sequence name="Entry">
                        <Action ID="SendEntry" point="{point}"/>
                        <Action ID="GoPoint" point="{point}"/>
                    </Sequence>
                    <Sequence name="Person">
                        <Action ID="AskName" Info="{info}"/>
                        <Action ID="AskDrink" Info="{info}"/>
                    </Sequence>
                    <Sequence name="Seat">
                        <Sequence name="Go Seats">
                            <Action ID="SendSit" point="{point}"/>
                            <Action ID="GoPoint" point="{point}"/>
                        </Sequence>
                        <Action ID="DetectSeat"/>
                        <Action ID="AskAge" Info="{info}"/>
                        <Action ID="OfferSeat" Info="{info}"/>
                    </Sequence>
                    <Sequence name="Report Person">
                        <Sequence name="Go Referee">
                            <Action ID="SendReferee" point="{point}"/>
                            <Action ID="GoPoint" point="{point}"/>
                        </Sequence>
                        <Action ID="SayInfo" Info="{info}"/>
                    </Sequence>
                </Sequence>
            </Repeat>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="AskAge">
            <inout_port default="{info}" name="Info"/>
        </Action>
        <Action ID="AskDrink">
            <inout_port name="Info"/>
        </Action>
        <Action ID="AskName">
            <inout_port name="Info"/>
        </Action>
        <Action ID="DetectSeat"/>
        <Action ID="GoPoint">
            <input_port name="{point}"/>
        </Action>
        <Action ID="Move"/>
        <Action ID="OfferSeat">
            <input_port default="{info}" name="Info"/>
        </Action>
        <Action ID="SayInfo">
            <input_port default="{info}" name="Info"/>
        </Action>
        <Action ID="SendEntry">
            <output_port name="{point}"/>
        </Action>
        <Action ID="SendReferee">
            <output_port name="{point}"/>
        </Action>
        <Action ID="SendSit">
            <output_port name="{point}"/>
        </Action>
        <Action ID="Start"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

