<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence name="Main">
            <Action ID="Start"/>
            <Repeat num_cycles="2">
                <Sequence>
                    <Action ID="Move" name="Move to entry"/>
                    <Sequence name="Person">
                        <Action ID="AskName" Name="{info}"/>
                        <Action FavDrink="{info}" ID="AskDrink"/>
                    </Sequence>
                    <Sequence name="Seat">
                        <Action ID="Move"/>
                        <Action ID="DetectSeat"/>
                        <Action ID="AskOld"/>
                        <Action ID="OfferSeat"/>
                    </Sequence>
                    <Sequence name="Report Person">
                        <Action ID="Move"/>
                        <Action ID="SayInfo" ReceiveInfo="{info}"/>
                    </Sequence>
                </Sequence>
            </Repeat>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="AskDrink">
            <output_port name="FavDrink"/>
        </Action>
        <Action ID="AskName">
            <output_port name="Name"/>
        </Action>
        <Action ID="AskOld"/>
        <Action ID="DetectSeat"/>
        <Action ID="Move"/>
        <Action ID="OfferSeat"/>
        <Action ID="SayInfo">
            <input_port default="{info}" name="ReceiveInfo"/>
        </Action>
        <Action ID="Start"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

